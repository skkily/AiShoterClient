<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AiList.UserInformationActivity"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="12dp"
            android:background="#00000000"
            android:text="返回"
            android:textColor="@color/Dark"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/information"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/commom_top"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="个人信息"
            android:textColor="@color/Dark"
            android:textSize="28dp" />

        <Button
            android:id="@+id/save"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="0dp"
            android:background="#00000000"
            android:text="保存"
            android:textColor="@color/Dark"
            android:textSize="22dp" />


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="50dp">

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="昵称:"
            android:textColor="@color/Dark"
            android:textSize="26dp" />

        <EditText
            android:id="@+id/edit_info_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="请输入昵称"
            android:paddingLeft="20dp"
            android:textSize="18dp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="邮箱:"
            android:textColor="@color/Dark"
            android:textSize="26dp" />

        <EditText
            android:id="@+id/edit_info_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="请输入邮箱"
            android:paddingLeft="20dp"
            android:textSize="18dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_info_changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="修改密码"
        android:textSize="26dp"
        android:background="#00000000"/>

    <Button
        android:id="@+id/btn_info_faceLogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="人脸认证"
        android:textSize="26dp"
        android:background="#00000000"/>

    <Button
        android:id="@+id/btn_info_qqLogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="qq认证"
        android:textSize="26dp"
        android:background="#00000000"/>

</LinearLayout>